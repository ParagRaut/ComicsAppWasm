@page "/dilbertcomicsviewer"

@inject IComicUrlService ComicUrlService

<h5>Click to see Dilbert comic strip</h5>

<br />

<div>
    <RadzenButton Click="@GetDilbertComic" Text="Get Comic Strip"/>
</div>

<br />

<SpinLoader IsLoading="_isLoading">
    <LoadingTemplate>
        <div class="col-12" style="background-color: transparent; height: 200px; vertical-align: middle"></div>
        <br />
        <br />
        <Swing Center="true" Size="100px"></Swing>
    </LoadingTemplate>
    <ContentTemplate>
        <picture>
            <img src="@_fileResult" class="img-thumbnail" alt="Comic Loading...">
        </picture>
    </ContentTemplate>
</SpinLoader>

@code {

    private bool _isLoading;

    private string _fileResult = "images/dilbert.png";

    private async Task GetDilbertComic()
    {
        _isLoading = true;
        _fileResult = await ComicUrlService.GetDilbertComic();
        _isLoading = false;
    }
}
