@page "/garfieldcomicsviewer"

@inject HttpClient Http
@inject IComicUrlService ComicUrlService

<h5>Click to see Garfield comic strip</h5>
<br />
<div>
    <button type="button" class="btn btn-primary" @onclick="GetGarfieldComic">Get Comic Strip</button>
</div>

<br />
<div class="justify-content-center">
    <picture>
        <img src="@_fileResult" class="img-fluid" alt="Comic Loading...">
    </picture>
</div>


@code {

    private string _fileResult = "images/garfield.png";

    private async Task GetGarfieldComic()
    {
        _fileResult = await ComicUrlService.GetGarfieldComic();
    }
}
